---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
	<main>
		<section class="not-found">
			<p class="code">404</p>
			<h1>Page not found</h1>
			<p class="message">The page you are looking for does not exist.</p>
			<a class="home-button" href="/">Go to Home</a>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem 1rem;
		max-width: 960px;
		min-height: 65vh;
		display: grid;
		place-items: center;
		color: white;
	}

	.not-found {
		text-align: center;
		display: grid;
		gap: 1rem;
	}

	.code {
		margin: 0;
		font-size: clamp(3rem, 9vw, 6rem);
		font-weight: 800;
		line-height: 1;
	}

	h1 {
		margin: 0;
		font-size: clamp(1.6rem, 4vw, 2.5rem);
	}

	.message {
		margin: 0;
		opacity: 0.85;
	}

	.home-button {
		justify-self: center;
		margin-top: 0.5rem;
		padding: 0.75rem 1.25rem;
		border-radius: 999px;
		background: white;
		color: black;
		font-weight: 700;
		text-decoration: none;
	}

	.home-button:hover {
		opacity: 0.9;
	}
</style>
