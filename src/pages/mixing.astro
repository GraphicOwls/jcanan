---
import Layout from '../layouts/Layout.astro';

const status = {
  available: {
    text: 'Accepting new projects',
    color: 'green',
  },
  unavailable: {
    text: 'Not accepting new projects',
    color: 'red',
  },
}

const currentStatus = status.unavailable;
---


<Layout title="Mixing">
  <main>
    <div class="hero" transition:name="hero" transition:animate="fade">
      <h1>Mixing & Mastering</h1>
      <p class="subtitle">Quality Mixing & Mastering</p>
      <div class="status-wrap">
        <div class="status-indicator" style={{background: currentStatus.color}}></div>
        <p class="status-text"><span class="status">{currentStatus.text}</span></p>
      </div>
    </div>
  </main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		max-width: calc(100% - 1.5rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 5rem 5%;
	}

	h1 {
		font-size: 3.5rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: .3rem;
		margin-top: 0;
	}

	.subtitle {
		text-transform: uppercase;
		letter-spacing: .6rem;
		font-size: .9rem;
		text-align: center;
		font-weight: 300;
	}

  .status-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1rem;
    font-size: 1rem;
    color: hsl(255, 100%, 100%, .7);
  }

  .status-indicator {
    width: .6rem;
    height: .6rem;
    border-radius: 50%;
    margin-right: .5rem;
  }

  .status {
    color: hsl(255, 100%, 100%, 1);
  }
</style>
