const navLinks = [
  {
    href: '/mixing',
    text: 'Mixing',
  },
  {
    href: 'mailto:get@jcanan.net',
    text: 'Contact',
  },
];
---

<nav>
  <Container>
    <div class="row">
      <a href="/">
        <img src="/jcanan.svg" alt="logo" class="logo">
      </a>
      <div class="col-md-12">
        <ul class="nav-menu">
          {navLinks.map(link => (
            <li role="presentation">
              <a 
                aria-current={Astro.url.pathname === link.href}
                class:list={[
                  'link',
                  {
                  current:
                    Astro.url.pathname === link.href || (link.href !== '/' && Astro.url.pathname.startsWith(link.href)),
                  }
                ]}
                href={link.href}
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </Container>
</nav>

<style>
  nav {
    padding: 1rem 0;
  }

  .row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: calc(100% - 1.5rem);
    margin: 0 auto;
  }

  .nav-menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-menu li a {
    text-decoration: none;
    color: hsl(255, 100%, 100%, 0.5);
    font-size: .9rem;
    font-weight: 400;
    letter-spacing: 1px;
    transition: color 0.3s ease;

    &:hover {
      color: hsl(255, 100%, 100%, 1);
    }

    &.current {
      color: hsl(255, 100%, 100%, 1);
    }
  }

  .logo {
    display: block;
    width: 60px;
    height: auto;
  }
</style>