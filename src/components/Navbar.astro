---
import Container from './Container.astro';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

const path = (path: string): string => {
  if (currentPath === path) {
    return 'current';
  }
  return '';
};
---

<nav>
  <Container>
    <div class="row">
      <a href="/">
        <img src="/jcanan.svg" alt="logo" class="logo">
      </a>
      <div class="col-md-12">
        <ul class="nav-menu">
          <li role="presentation"><a href="/mixing" class={path('mixing')}>Mixing</a></li>
          <li role="presentation"><a href="mailto:get@jcanan.net" class={path('contact')}>Contact</a></li>
        </ul>
      </div>
    </div>
  </Container>
</nav>

<style>
  nav {
    padding: 1rem 0;
  }

  .row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: calc(100% - 1.5rem);
    margin: 0 auto;
  }

  .nav-menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-menu li a {
    text-decoration: none;
    color: hsl(255, 100%, 100%, 0.5);
    font-size: .9rem;
    font-weight: 400;
    letter-spacing: 1px;
    transition: color 0.3s ease;

    &:hover {
      color: hsl(255, 100%, 100%, 1);
    }

    &.current {
      color: hsl(255, 100%, 100%, 1);
    }
  }

  .logo {
    display: block;
    width: 60px;
    height: auto;
  }
</style>