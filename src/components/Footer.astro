<style>
  footer {
    padding: 1rem 0;
    text-align: center;
    color: hsl(255, 100%, 100%, .5);
    font-weight: 300;
    font-size: .8rem;
  }

  .footer-row {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
    margin-bottom: 2rem;
  }

  @media (width < 600px) {
    ul {
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }

  li a {
    display: flex;
    align-items: center;
    gap: .4rem;
    color: inherit;
    text-decoration: none;
    font-weight: 300;
    font-size: .8rem;
    text-transform: uppercase;
    letter-spacing: .2rem;
    transition: color .3s ease-in-out;

    &:hover {
      color: hsl(255, 100%, 100%, 1);
    }

    & svg {
      width: 1rem;
      height: 1rem;
      fill: white;
    }
  }
</style>